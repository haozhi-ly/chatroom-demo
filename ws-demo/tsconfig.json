{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "outDir": "dist",
      "types": [
        "node"
      ],
      "declaration": true,// 是否生成声明文件
      "declarationDir": "dist/type",// 声明文件打包的位置
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
}  